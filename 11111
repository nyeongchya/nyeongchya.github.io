      {
        id: "oldcircuit",
        name: "Old Circuit",
        level: "???",
        hazard: "미확인 / 무감시",
        desc: "옛 서버 타워와 폐 공장이 남아 있는 유령 공단. 망가진 회로 사이에 여전히 살아 있는 오래된 데이터가 숨어 있다.",
        key: "유령 서버 출처 후보 1순위."
      },
      {
        id: "outskirt",
        name: "Outskirt Slabs",
        level: "4",
        hazard: "위험 / 저감시",
        desc: "도시 끝 콘크리트 판 위의 임시 거주 지구. 공식 인구 통계에 잡히지 않는 사람들과 무기고들이 섞여 있다.",
        key: "“우리가 완전히 통제할 수 없는 유일한 변수.” – C"
      }
    ];

    // ===== RENDER: JOBS =====
    function renderJobs(filterStatus = "all", searchText = "") {
      const listEl = document.getElementById("jobs-list");
      if (!listEl) return;

      const term = searchText.trim().toLowerCase();

      const filtered = jobs.filter(job => {
        if (filterStatus !== "all" && job.status !== filterStatus) return false;
        if (!term) return true;
        const blob = `${job.title} ${job.zone} ${job.summary} ${job.note}`.toLowerCase();
        return blob.includes(term);
      });

      listEl.innerHTML = "";

      if (!filtered.length) {
        const empty = document.createElement("div");
        empty.textContent = "조건에 맞는 의뢰가 없습니다. 필터를 조정해보세요.";
        empty.style.fontSize = "12px";
        empty.style.color = "var(--muted)";
        listEl.appendChild(empty);
        return;
      }

      filtered.forEach(job => {
        const card = document.createElement("article");
        card.className = "job-card";

        // rank badge
        let rankClass = "";
        if (job.rank === "S") rankClass = "badge-rank-s";
        else if (job.rank === "A") rankClass = "badge-rank-a";
        else rankClass = "badge-rank-b";

        let statusClass = "";
        if (job.status === "open") statusClass = "badge-status-open";
        else if (job.status === "accepted") statusClass = "badge-status-accepted";
        else statusClass = "badge-status-completed";

        const statusLabel =
          job.status === "open"
            ? "오픈"
            : job.status === "accepted"
            ? "진행중"
            : "완료";

        card.innerHTML = `
          <div class="job-header">
            <div>
              <div class="job-title">${job.title}</div>
              <div class="job-meta">
                <span>${job.zone}</span>
                <span>위험도 ${job.danger}</span>
              </div>
            </div>
            <div style="display:flex;flex-direction:column;gap:4px;align-items:flex-end;">
              <span class="badge ${rankClass}">RANK ${job.rank}</span>
              <span class="badge ${statusClass}">${statusLabel}</span>
            </div>
          </div>
          <div class="job-body">${job.summary}</div>
          <div class="job-meta" style="margin-top:6px;">
            <span>보상: ${job.reward}</span>
          </div>
          <div class="job-meta">
            <span style="opacity:0.8;">메모: ${job.note}</span>
          </div>
        `;

        listEl.appendChild(card);
      });
    }

    // ===== RENDER: INTEL =====
    function renderIntel() {
      const listEl = document.getElementById("intel-list");
      if (!listEl) return;

      listEl.innerHTML = "";

      intelFeed.forEach(item => {
        const card = document.createElement("article");
        card.className = "nd-intel-card";

        card.innerHTML = `
          <div class="nd-intel-inner">
            <div class="nd-intel-top">
              <div>
                <div class="nd-intel-title">${item.title}</div>
                <div class="nd-intel-meta">${item.time} · 신뢰도 ${item.trust}</div>
              </div>
              <div class="nd-intel-tag ${item.tagClass}">${item.tag}</div>
            </div>
            <div class="nd-intel-body">${item.body}</div>
          </div>
        `;

        listEl.appendChild(card);
      });
    }

    // ===== RENDER: MAP =====
    function renderMap() {
      const gridEl = document.getElementById("map-grid");
      if (!gridEl) return;

      const nameEl = document.getElementById("map-detail-name");
      const levelEl = document.getElementById("map-detail-level");
      const descEl = document.getElementById("map-detail-desc");
      const keyEl = document.getElementById("map-detail-key");

      function setDetail(zone) {
        if (!zone) return;
        if (nameEl) nameEl.textContent = zone.name;
        if (levelEl) levelEl.textContent = `위험도 레벨 ${zone.level} · 상태: ${zone.hazard}`;
        if (descEl) descEl.textContent = zone.desc;
        if (keyEl) keyEl.textContent = `핵심 포인트: ${zone.key}`;
      }

      gridEl.innerHTML = "";
      mapZones.forEach((zone, index) => {
        const card = document.createElement("button");
        card.type = "button";
        card.className = "zone-card";
        card.dataset.id = zone.id;
        card.innerHTML = `
          <div class="zone-name">${zone.name}</div>
          <div class="zone-meta">레벨 ${zone.level} · ${zone.hazard}</div>
          <div class="zone-key">${zone.desc}</div>
        `;

        card.addEventListener("click", () => {
          $$(".zone-card").forEach(z => z.classList.remove("active"));
          card.classList.add("active");
          setDetail(zone);
        });

        gridEl.appendChild(card);

        // 첫 번째 항목 기본 선택
        if (index === 0) {
          card.classList.add("active");
          setDetail(zone);
        }
      });
    }

    // ===== NAV / SCROLL =====
    function setupNav() {
      const navToggle = $("#navToggle");
      const mainNav = $("#mainNav");
      if (navToggle && mainNav) {
        navToggle.addEventListener("click", () => {
          mainNav.classList.toggle("open");
        });
      }

      // nav 링크 클릭 시 active 업데이트 + 부드러운 스크롤
      $$("#mainNav a").forEach(link => {
        link.addEventListener("click", (e) => {
          const href = link.getAttribute("href");
          if (href && href.startsWith("#")) {
            e.preventDefault();
            const target = document.querySelector(href);
            if (target) {
              target.scrollIntoView({ behavior: "smooth", block: "start" });
            }
            $$("#mainNav a").forEach(a => a.classList.remove("active"));
            link.classList.add("active");
            mainNav.classList.remove("open");
          }
        });
      });

      // Hero 버튼 스크롤
      $$("[data-scroll]").forEach(btn => {
        btn.addEventListener("click", () => {
          const targetSel = btn.getAttribute("data-scroll");
          if (!targetSel) return;
          const target = document.querySelector(targetSel);
          if (target) target.scrollIntoView({ behavior: "smooth", block: "start" });
        });
      });
    }

    // ===== JOB FILTER / SEARCH =====
    function setupJobControls() {
      const searchInput = $("#job-search");
      const filterButtons = $$(".btn-filter");
      let currentStatus = "all";
      let currentSearch = "";

      if (searchInput) {
        searchInput.addEventListener("input", (e) => {
          currentSearch = e.target.value || "";
          renderJobs(currentStatus, currentSearch);
        });
      }

      filterButtons.forEach(btn => {
        btn.addEventListener("click", () => {
          filterButtons.forEach(b => b.classList.remove("active"));
          btn.classList.add("active");
          currentStatus = btn.dataset.status || "all";
          renderJobs(currentStatus, currentSearch);
        });
      });

      renderJobs(currentStatus, currentSearch);
    }

    document.addEventListener("DOMContentLoaded", () => {
      setupNav();
      setupJobControls();
      renderIntel();
      renderMap();
    });
  </script>
</body>
</html>
