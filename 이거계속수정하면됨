    <h1 class="neon">Back Alley Sector Map</h1>
    <div class="panel">
        <div class="map-grid">
            <script>
                for (let i=0; i<36; i++) 
                    document.write(`<div class='map-cell' onclick='selectMap(${i})'></div>`);
