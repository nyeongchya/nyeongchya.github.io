<script>
/* ---------------------- 구역 선택 ---------------------- */
const infoText = [
    "A1 — 네온 파츠 밀수 시장",
    "A2 — 드론 감시 사각지대",
    "A3 — 폐기된 메모리 저장소",
    "A4 — 블랙데이터 노드",
    "A5 — 불법 이식 클리닉",
    "A6 — 스파이 회수 지점",
];

function selectArea(cell){
    const index = [...cell.parentNode.children].indexOf(cell);
    document.getElementById("map-info").innerText =
        infoText[index] || "미확인 구역 — 정보 없음";
}

/* ---------------------- KEYCARD NAV ---------------------- */
function scrollToSec(id){
    document.getElementById(id).scrollIntoView({ behavior: "smooth" });
}

/* ---------------------- TERMINAL ANIMATION ---------------------- */
function openTerminal(){
    const term = document.getElementById("terminal");
    term.style.display = "block";
    term.innerText = "> 연결 요청 중...\n";

    let lines = [
        ">> 네트워크 암호화 채널 생성...",
        ">> 데이터 패킷 세분화...",
        ">> 경로 우회중(DroneNet-03 회피)...",
        ">> 신원 토큰 무효화 & 익명화...",
        ">> 의뢰 전송 중...",
        ">> 완료."
    ];

    let i = 0;
    let timer = setInterval(()=>{
        term.innerText += lines[i] + "\n";
        i++;
        if(i === lines.length){
            clearInterval(timer);
        }
    }, 450);
}

/* ---------------------- 커서 광원 ---------------------- */
document.addEventListener("mousemove", (e)=>{
    const l = document.getElementById("light");
    l.style.left = e.pageX + "px";
    l.style.top  = e.pageY + "px";
});
</script>

